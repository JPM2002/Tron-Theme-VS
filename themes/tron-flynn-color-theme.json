{
    "name": "Tron - Flynn",
    "type": "dark",
    "colors": {
      "editor.background": "#000000",  // Black editor background
      "editor.foreground": "#FFFFFF",  // White text
      "editor.lineHighlightBackground": "#1E1E1E",  // Highlight for current line
      "editor.selectionBackground": "#264F78",  // Selection color
      "editorCursor.foreground": "#FFFFFF",  // Cursor color
      "activityBar.background": "#1F1F1F",  // Sidebar background
      "sideBar.background": "#1F1F1F",  // File explorer background
      "sideBar.foreground": "#FFFFFF",  // File explorer text
      "editorError.foreground": "#FF564A",  // Error messages
      "editorLineNumber.foreground": "#858585"  // Line numbers
    },
    "tokenColors": [
      {
        "scope": "comment",
        "settings": {
          "foreground": "#6A9955",  // Green comments
          "fontStyle": "italic"
        }
      },
      {
        "scope": "keyword",
        "settings": {
          "foreground": "#569CD6"  // Blue keywords
        }
      },
      {
        "scope": "string",
        "settings": {
          "foreground": "#D69D85"  // Pinkish strings
        }
      },
      {
        "scope": "constant.numeric",
        "settings": {
          "foreground": "#B5CEA8"  // Numeric constants
        }
      },
      {
        "scope": "variable",
        "settings": {
          "foreground": "#9CDCFE"  // Light blue variables
        }
      },
      {
        "scope": "function",
        "settings": {
          "foreground": "#DCDCAA"  // Yellow functions
        }
      },
      {
        "scope": "class",
        "settings": {
          "foreground": "#4EC9B0"  // Cyan classes
        }
      },
      {
        "scope": "invalid",
        "settings": {
          "foreground": "#FF564A",  // Red for errors
          "fontStyle": "bold"  // Error background
        }
      }
    ]
  }
  